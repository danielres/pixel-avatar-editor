body {
  @apply bg-surface-300;
}

.card {
  padding: 1rem;
  background: white;
  box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05), 0 2px 4px 1px rgba(0, 0, 0, 0.1);
}

.stack {
  display: grid;

  & > * {
    grid-column: 1;
    grid-row: 1;
  }

  & > * + * {
    pointer-events: none;
  }

  & > * + * > * {
    pointer-events: auto;
  }
}
